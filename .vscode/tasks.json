                "-lCGAL_Core", 
                "-lCGAL", 
                "-lmpfr", 
                 "-lgmp", 
//                 "-lCGAL_Core", "-lCGAL", 
                 "-lboost_thread", 
                 "-lboost_system",
                 "-lpthread" 
//                 ,"-DCGAL_DONT_USE_LAZY_KERNEL=1", "-DCGAL_USE_GMP=1"
//                 ,"-DCGAL_USE_GMP", "-DCGAL_USE_MPFR"
            ],
            "group": "build",
            "problemMatcher":"$gcc"            
        }        
    ]
