    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "-frounding-math", "-std=c++11", "-pthread",
                "src/OrderKVoronoiD.cpp", "src/printFormattingUtilFunctions.cpp", "src/utilityFunctions.cpp",
                "-o", "OrderKVoronoiD_d",
