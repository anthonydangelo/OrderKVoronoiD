                "-lCGAL_Core_d", 
                "-lCGAL_d", 
                "-lmpfr", 
                 "-lgmp", 
//                 "-lCGAL_Core", "-lCGAL", 
                 "-lboost_thread", 
                 "-lboost_system",
                 "-lpthread" 
